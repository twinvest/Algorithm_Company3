package day0205;

import java.util.Stack;

public class 후위표기식연산 {
	public static void main(String[] args) {
		String str = "134*7*+5+";
		Stack<Character> s = new Stack<>();
		
		//식을 순회하면서(문자열에서 문자 한글자씩 검사하면서)
		for(int i =0; i<str.length(); ++i)
		{
			//연산자면 두개의 피연산자를 스택에서 꺼내서 해당 연산자로 연산한 후 결과를 스택에 담는다.
			if(str.charAt(i) == '/')
			{
				int num1 = s.pop();
				int num2 = s.pop();
				int num3 = num1/num2;
				s.push((char)num3);
			}
			else if(str.charAt(i) == '*')
			{
				int num1 = s.pop();
				int num2 = s.pop();
				int num3 = num1*num2;
				s.push((char)num3);
			}
			else if(str.charAt(i) == '-')
			{
				int num1 = s.pop();
				int num2 = s.pop();
				int num3 = num1-num2;
				s.push((char)num3);
			}
			else if(str.charAt(i) == '+')
			{
				int num1 = s.pop();
				int num2 = s.pop();
				int num3 = num1+num2;
				s.push((char)num3);
			}
			//피연산자면 스택에 담는다.
			else
			{
				s.push(str.charAt(i));
			}
		}
		
		
		
		
		
		//식이 끝나면 스택에 있는 하나의 값이 결과.
	}
}
