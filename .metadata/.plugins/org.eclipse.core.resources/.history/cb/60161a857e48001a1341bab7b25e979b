package day0206;

public class SinglyLinkedList {
	static class Node {
		int data;
		Node link;
	}

	Node head;
	int size;

	void addToFirst(int data) {
		// 처음삽입
		if (head == null) {
			Node n = new Node();
			n.data = data;
			n.link = null;
			head = n;
		} else {
			Node n = new Node();
			n.data = data;
			n.link = head;
			head = n;
		}
	}

	void addToLast(int data) {
		// 처음삽입
		if (head == null) {
			Node n = new Node();
			n.data = data;
			n.link = null;
			head = n;
		} else {
			// 노드생성
			Node n = new Node();
			n.data = data;
			n.link = null;

			Node tmp = head;
			while (tmp.link != null)
				tmp = tmp.link;
			tmp.link = n;
		}

	}

	// 전체 노드들을 이쁘게 쭑 문자열로 만들어주도록
	public String toString() {
		Node tmp = head;
		while(tmp != null)
		{
			System.out.println(tmp.data);
			tmp = tmp.link;
		}
		return "";
	}

	public static void main(String[] args) {
		SinglyLinkedList list = new SinglyLinkedList();
		list.addToLast(10);
		list.addToLast(20);
		list.addToLast(30);
		list.addToLast(40);
		String a = list.toString();
	}

}
