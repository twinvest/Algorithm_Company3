package day0131;
import java.util.Scanner;

public class 스택 {
	public static void main(String[] args) {
		int[] stack = new int[5];
		int top = -1;
		Scanner sc = new Scanner(System.in);
		while(true) {
			System.out.println("1. Push(입력 예 : 1 10)\n2. Pop(입력 예 : 2)\n0. 종료");
			int sel = sc.nextInt();
			if(sel == 0)
				break;
			else if( sel == 1) {
				int num = sc.nextInt();
				top = push(top, num, stack);
				System.out.println("입력받은 " + num + "을 스택에 Push");
			}
			else if( sel == 2 ) {
				System.out.println("Pop되는 값을 출력");
			}
		}
	}
	static public int push(int top, int num, int[] stack)
	{
		++top;
		if(top == stack.length)
		{
			--top;
			System.out.println("스택이 가득 찼습니다.");
		}
		else
		{
			stack[top] = num;
		}
		for(int i=0; i<top; ++i)
			System.out.print();
		
		return top;
	}
	
	static public int pop(int top, int[] stack)
	{
		stack[--top] = 0;
		return top;
	}
	
}
